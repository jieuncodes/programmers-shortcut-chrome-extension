{
  "manifest_version": 3,
  "name": "Programmers Shortcut",
  "version": "1.0",
  "description": "Add a keyboard shortcut to run code on programmers.com",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://*.programmers.co.kr/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://school.programmers.co.kr/learn/*"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "run_code": {
      "suggested_key": {
        "default": "Ctrl+K"
      },
      "description": "Run code on programmers.com"
    }
  },
  "icons": {
    "48": "icon.png"
  }
}
